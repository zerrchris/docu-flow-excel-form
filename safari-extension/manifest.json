{
  "manifest_version": 2,
  "name": "DocuFlow Runsheet Assistant",
  "version": "1.0.0",
  "description": "Add runsheet functionality to any webpage for document processing",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://*.lovableproject.com/*",
    "https://xnpmrafjjqsissbtempj.supabase.co/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DocuFlow Runsheet"
  },

  "web_accessible_resources": [
    "panel.html",
    "panel.js",
    "icons/*.png"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_security_policy": "script-src 'self'; object-src 'self';"
}